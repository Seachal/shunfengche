<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:padding="10dp"
        android:src="@mipmap/icon_new_arrow_back" />

    <LinearLayout
        android:id="@+id/linear_search"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/shape_toolbar_input_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/icon_search" />

        <TextView
            android:id="@+id/tv_searchHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入关键词"
            android:textColor="#9399a5" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_kefu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="13dp"
        android:src="@mipmap/icon_service_gray" />

    <TextView
        android:id="@+id/tv_postJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="10dp"
        android:text="发布求职"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_16sp"
        android:visibility="gone" />

    <ImageView
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:padding="9dp"
        android:src="@mipmap/icon_kefu"
        android:visibility="gone" />

</LinearLayout>