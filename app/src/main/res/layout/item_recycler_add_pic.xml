<?xml version="1.0" encoding="utf-8"?>
<com.windmillsteward.jukutech.customview.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_add_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:src="@mipmap/add_pic_icon" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:padding="2dp"
        android:src="@mipmap/cancel" />

</com.windmillsteward.jukutech.customview.SquareLayout>