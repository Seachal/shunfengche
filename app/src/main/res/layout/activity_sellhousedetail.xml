<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_f0f0"
    android:orientation="vertical">

    <include layout="@layout/toolbar_detail" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.windmillsteward.jukutech.customview.FlyBanner
                    android:id="@+id/flyBanner"
                    android:layout_width="match_parent"
                    android:layout_height="185dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="13dp"
                        android:lineSpacingExtra="4dp"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/text_size_15sp"
                        android:textStyle="bold"
                        tools:text="天河区小新塘酒店公寓" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="18dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_add_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#9399a5"
                            android:textSize="@dimen/text_size_12sp"
                            tools:text="发布：2017-11-26" />

                        <TextView
                            android:id="@+id/tv_read_times"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#9399a5"
                            android:textSize="@dimen/text_size_12sp"
                            tools:text="浏览：1次" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/color_white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linear_out"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="14dp"
                                    android:text="户型"
                                    android:textColor="@color/color_aaaaaa"
                                    android:textSize="@dimen/text_size_13sp" />

                                <TextView
                                    android:id="@+id/tv_house_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="10dp"
                                    android:paddingTop="10dp"
                                    android:textColor="#3172f4"
                                    android:textSize="@dimen/text_size_13sp"
                                    tools:text="两室一厅" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_price_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="14dp"
                                    android:text="价格"
                                    android:textColor="@color/color_aaaaaa"
                                    android:textSize="@dimen/text_size_13sp" />

                                <TextView
                                    android:id="@+id/tv_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="10dp"
                                    android:paddingTop="10dp"
                                    android:textColor="#f86166"
                                    android:textSize="@dimen/text_size_13sp"
                                    tools:text="300万元" />

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="@color/color_divider" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp">

                        <TextView
                            android:id="@+id/tv_community"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="6"
                            android:lineSpacingExtra="11dp"
                            android:paddingLeft="20dp"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/text_size_12sp"
                            android:gravity="top"
                             />

                        <TextView
                            android:id="@+id/tv_floor_area"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:lineSpacingExtra="11dp"
                            android:gravity="top"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/text_size_12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingBottom="13dp"
                            android:paddingTop="14dp"
                            android:text="房屋概况"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/text_size_14sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="15dp"
                            android:background="@color/color_divider" />

                    </LinearLayout>

                    <com.windmillsteward.jukutech.customview.ExpandTextView
                        android:id="@+id/expand_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        app:contentTextSize="@dimen/text_size_11sp"
                        app:expandHint="查看更多"
                        app:foldHint="收起"
                        app:hintTextSize="@dimen/text_size_14sp"
                        app:minVisibleLines="5"
                        app:textContentColor="@color/color_666666"
                        app:textHintColor="#3172f4" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_user_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <com.windmillsteward.jukutech.customview.CircleImageView
                android:id="@+id/civ_header"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="12dp"
                android:src="@mipmap/icon_malehead" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="大海"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_size_14sp" />

        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_fee"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="信息费: ¥10"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_14sp" />

        <LinearLayout
            android:id="@+id/linear_call"
            android:layout_width="159dp"
            android:layout_height="match_parent"
            android:background="#3172f4"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@mipmap/icon_phone_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看联系方式"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_13sp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>