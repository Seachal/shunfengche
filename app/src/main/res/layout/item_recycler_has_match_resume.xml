<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/shape_wenxintishi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="10dp">

            <com.windmillsteward.jukutech.customview.CircleImageView
                android:id="@+id/iv_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/default_avatar"
                app:layout_constraintLeft_toLeftOf="parent" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintLeft_toRightOf="@+id/iv_avatar">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="张爱国   男"
                        android:textColor="#394043"
                        android:textSize="@dimen/text_size_12sp" />

                    <TextView
                        android:id="@+id/tv_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="申请职位：装修工"
                        android:visibility="visible"
                        android:singleLine="true"
                        android:maxLength="15"
                        android:ellipsize="end"
                        android:textColor="#394043"
                        android:textSize="@dimen/text_size_11sp" />

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:layout_weight="1"
                        android:text="联系电话：13160503453"
                        android:textColor="#9399a5"
                        android:textSize="@dimen/text_size_11sp" />

                    <TextView
                        android:visibility="visible"
                        android:id="@+id/tv_shishi"
                        android:layout_marginLeft="5dp"
                        android:textSize="@dimen/text_size_11sp"
                        android:textColor="@color/common_color"
                        android:text="实时共享位置"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="13dp"

                android:src="@mipmap/yellow_phone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="72dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/location"
                android:drawablePadding="5dp"
                android:gravity="center|left"
                android:text="淄博市张店区"
                android:textColor="#5f87ab"
                android:textSize="@dimen/text_size_12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_header" />

            <TextView
                android:id="@+id/tv_tousu"
                android:layout_width="65dp"
                android:layout_height="25dp"
                android:background="@drawable/shape_border_orange_fd5a5a"
                android:gravity="center"
                android:visibility="gone"
                android:text="投诉"
                android:textColor="#fe4d4d"
                android:textSize="@dimen/text_size_12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_header" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/shape_border_yellow_fbb939"
                android:gravity="center"
                android:text="确认支付"
                android:textColor="#3172f4"
                android:textSize="@dimen/text_size_12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_header" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>