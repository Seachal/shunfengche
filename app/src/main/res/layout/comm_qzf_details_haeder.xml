<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/lay_ll_header"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:background="@drawable/shape_wenxintishi"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="15dp"
            android:layout_height="wrap_content">

            <com.windmillsteward.jukutech.customview.CircleImageView
                android:id="@+id/iv_avatar"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@mipmap/default_avatar" />

            <LinearLayout
                android:id="@+id/lay_ll_top"
                android:layout_toRightOf="@id/iv_avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp">


                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="#394043"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:id="@+id/tv_pipei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#394043"
                    android:textSize="@dimen/text_size_14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_below="@id/lay_ll_top"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/iv_avatar"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#9399a5"
                    android:textSize="@dimen/text_size_12sp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="#9399a5"
                    android:textSize="@dimen/text_size_12sp" />

            </LinearLayout>
            <ImageView
                android:id="@+id/iv_phone"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/iv_avatar"
                android:layout_marginRight="20dp"
                android:src="@mipmap/yellow_phone" />
        </RelativeLayout>








    </LinearLayout>
</LinearLayout>