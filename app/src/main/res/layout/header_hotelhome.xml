<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:background="@color/color_bg_f0f0"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/color_white"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="30dp"
            android:orientation="horizontal"
            android:layout_height="50dp">

            <TextView
                android:text="位置："
                android:textSize="@dimen/text_size_17sp"
                android:textColor="@color/text_color_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_location"
                android:text=""
                android:textSize="@dimen/text_size_17sp"
                android:textColor="@color/text_color_black"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/icon_marker"
                    android:layout_width="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_height="17dp" />
                <TextView
                    android:id="@+id/tv_curr_location"
                    android:text="当前位置"
                    android:textColor="@color/color_price"
                    android:textSize="@dimen/text_size_14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/view_line_marginleft_15"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/tv_date"
                android:textSize="@dimen/text_size_17sp"
                android:text=""
                android:textColor="@color/text_color_black"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@mipmap/icon_jump"
                android:layout_width="13dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <include layout="@layout/view_line_marginleft_15"/>

        <LinearLayout
            android:id="@+id/linear_hotel_type"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_hotel_type"
                android:textSize="@dimen/text_size_17sp"
                android:hint="星级"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/text_color_black"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@mipmap/icon_jump"
                android:layout_width="13dp"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_search_keyword"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:layout_height="50dp">
            <EditText
                android:id="@+id/et_keyword"
                android:hint="位置/关键词"
                android:textSize="@dimen/text_size_17sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/color_white"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@mipmap/icon_jump"
                android:layout_width="13dp"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <include layout="@layout/view_line_marginleft_15"/>
        <LinearLayout
            android:id="@+id/linear_price"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_price"
                android:hint="价格"
                android:textSize="@dimen/text_size_17sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/text_color_black"
                android:background="@color/color_white"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@mipmap/icon_jump"
                android:layout_width="13dp"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:background="@color/color_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@color/color_white"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/tv_search"
            android:text="开始搜索"
            android:gravity="center"
            android:textSize="@dimen/text_size_18sp"
            android:textColor="@color/color_white"
            android:background="@drawable/shape_btn_them_deep_bg"
            android:layout_width="218dp"
            android:layout_height="42dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@color/color_bg_f0f0"
        android:layout_height="40dp">
        <ImageView
            android:src="@mipmap/img_tuijianjiudian"
            android:layout_width="93dp"
            android:layout_height="14dp" />
    </LinearLayout>
</LinearLayout>