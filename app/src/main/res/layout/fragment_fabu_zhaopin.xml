                    android:hint="输入工作描述"
                    android:maxLength="200"
                    android:minLines="7"
                    android:padding="10dp"
                    android:textColorHint="@color/hint_9f9f9f"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/text_size_15sp" />

                <include layout="@layout/layout_luzhi_yuyin" />

                <include layout="@layout/layout_paizhao" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="16dp"
                    android:text="只有匹配成功才能看到您的所有信息"
                    android:textColor="@color/color_red"
                    android:textSize="@dimen/text_size_13sp" />

                <include layout="@layout/layout_shipin" />


                <include layout="@layout/view_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_lianxiren_tips"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="*联&#160;&#160;系&#160;&#160;人"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/text_size_16sp" />

                    <EditText
                        android:id="@+id/tv_lianxiren_value"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入联系人姓名"
                        android:paddingLeft="12dp"
                        android:maxLength="5"
                        android:paddingRight="13dp"
                        android:textColorHint="@color/hint_9f9f9f"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/text_size_15sp" />

                </LinearLayout>

                <include layout="@layout/view_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_phone_tips"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="*联系电话"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/text_size_16sp" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="联系电话"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:paddingLeft="12dp"
                        android:textColorHint="@color/hint_9f9f9f"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/text_size_15sp" />
                    <TextView
                        android:id="@+id/tv_change_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/shape_text_white_bg_r4_stro_3172f4"
                        android:text="更换手机号"/>

                </LinearLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/color_bg" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <include layout="@layout/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_fee_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="￥0.00（含信息费￥0.00）"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_16sp" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="159dp"
            android:layout_height="match_parent"
            android:background="@color/common_color"
            android:gravity="center"
            android:text="发布"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16sp" />
    </LinearLayout>
