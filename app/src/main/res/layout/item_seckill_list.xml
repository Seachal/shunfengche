<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/color_bg_f0f0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_content"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@id/iv_content"
            android:maxLines="2"
            android:textSize="@dimen/text_size_13sp" />

        <com.windmillsteward.jukutech.utils.StateButton
            android:id="@+id/btn_discount"
            android:layout_width="38dp"
            android:layout_height="18dp"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/iv_content"
            android:gravity="center"
            android:padding="0dp"
            android:textColor="@color/color_text_94b"
            android:textSize="@dimen/text_size_12sp"
            app:normalBackgroundColor="@color/color_white"
            app:normalStrokeColor="@color/color_text_94b"

            app:normalStrokeWidth="1dp"
            app:pressedBackgroundColor="@color/color_white"

            app:radius="4dp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_discount"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/iv_content"
            android:textColor="@color/color_text_94b"
            android:textSize="@dimen/text_size_13sp" />

        <com.windmillsteward.jukutech.utils.StateButton
            android:layout_marginRight="11dp"
            android:layout_marginBottom="14dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_seckill"
            android:layout_width="58dp"
            android:layout_height="18dp"
            android:padding="0dp"
            android:text="立即秒杀"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_12sp"
            app:normalBackgroundColor="@color/color_text_ccc"
            app:normalStrokeColor="@android:color/white"
            app:radius="4dp" />
    </RelativeLayout>
</LinearLayout>