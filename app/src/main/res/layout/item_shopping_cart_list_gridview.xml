<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="99dp">

        <ImageView
            android:id="@+id/iv_select"
            android:src="@mipmap/icon_select_n"
            android:scaleType="centerCrop"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="27dp"
            android:padding="5dp"
            android:layout_height="27dp" />

        <FrameLayout
            android:layout_width="88dp"
            android:layout_height="88dp">
            <ImageView
                android:id="@+id/iv_pic"
                android:src="@mipmap/icon_default_pic"
                android:scaleType="centerCrop"
                android:layout_width="88dp"
                android:layout_height="88dp" />

            <TextView
                android:id="@+id/tv_commodity_status"
                android:text="已失效"
                android:textColor="@color/color_white"
                android:background="#33333333"
                android:gravity="center"
                android:visibility="gone"
                android:textSize="@dimen/text_size_12sp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/linear_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="149dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_reduce"
                        android:background="@drawable/shape_shopping_cart_list_frame"
                        android:layout_width="29dp"
                        android:text="-"
                        android:textSize="@dimen/text_size_20sp"
                        android:textColor="@color/color_text_78"
                        android:gravity="center"
                        android:layout_height="29dp" />

                    <TextView
                        android:id="@+id/tv_number_"
                        android:textSize="@dimen/text_size_15sp"
                        android:textColor="@color/color_text_999"
                        android:text="1"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/shape_shopping_cart_list_frame"
                        android:layout_width="87dp"
                        android:gravity="center"
                        android:layout_height="29dp" />
                    <TextView
                        android:id="@+id/tv_add"
                        android:background="@drawable/shape_shopping_cart_list_frame"
                        android:layout_width="29dp"
                        android:text="+"
                        android:textSize="@dimen/text_size_20sp"
                        android:textColor="@color/color_text_78"
                        android:gravity="center"
                        android:layout_height="29dp" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="149dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape_shopping_cart_list_frame"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/text_size_13sp"
                        android:textColor="@color/color_text_999"
                        android:text="型号:"
                        android:layout_marginLeft="7dp"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="29dp" />
                    <TextView
                        android:id="@+id/tv_commodity_model"
                        android:textSize="@dimen/text_size_13sp"
                        android:textColor="@color/color_text_999"
                        android:text="五河"
                        android:layout_marginLeft="5dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="29dp" />

                    <ImageView
                        android:id="@+id/iv_choice_model"
                        android:src="@mipmap/icon_opento"
                        android:layout_width="21dp"
                        android:paddingLeft="5dp"
                        android:layout_margin="5dp"
                        android:paddingRight="5dp"
                        android:layout_height="19dp" />

                </LinearLayout>



            </LinearLayout>

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="52dp"
                android:background="@color/color_them_deep"
                android:text="删除"
                android:textSize="@dimen/text_size_13sp"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_normal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title"
                android:text=""
                android:textSize="@dimen/text_size_13sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/text_color_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_model"
                android:text=""
                android:layout_marginTop="5dp"
                android:textSize="@dimen/text_size_13sp"
                android:textColor="@color/color_text_999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_price"
                    android:text=""
                    android:textColor="@color/color_price"
                    android:textSize="@dimen/text_size_12sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_number"
                    android:text=""
                    android:textColor="@color/color_text_999"
                    android:textSize="@dimen/text_size_12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/view_line"/>

</LinearLayout>