<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_indicator_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_rencai_home_tab_s"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="进行中"
                android:textColor="@color/common_color"
                android:textSize="@dimen/text_size_17sp" />

            <TextView
                android:id="@+id/tv_left_hongdian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/tv_left"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/text_size_9sp"
                android:textColor="@color/color_white"
                android:gravity="center"
                android:text=""
                android:background="@drawable/icon_hot_dot"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_rencai_home_tab_n"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="已完成"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_17sp" />

            <TextView
                android:id="@+id/tv_right_hongdian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_alignRight="@id/tv_right"
                android:layout_marginRight="10dp"
                android:text=""
                android:textSize="@dimen/text_size_9sp"
                android:textColor="@color/color_white"
                android:background="@drawable/icon_hot_dot"
                android:visibility="invisible" />
        </RelativeLayout>


    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


