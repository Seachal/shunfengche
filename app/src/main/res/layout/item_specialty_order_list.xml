<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/color_white"
    android:layout_height="wrap_content">

    <View
        android:background="@color/color_bg_f0f0"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/tv_title"
            android:textSize="@dimen/text_size_13sp"
            android:textColor="@color/text_color_black"
            android:text=""
            android:layout_marginLeft="10dp"
            android:drawableRight="@mipmap/icon_jump_black"
            android:drawablePadding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/order_status"
            android:text=""
            android:textSize="@dimen/text_size_13sp"
            android:textColor="@color/color_23abac"
            android:layout_width="wrap_content"
            android:paddingLeft="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingRight="5dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <include layout="@layout/view_line"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="37dp">

        <TextView
            android:id="@+id/tv_number"
            android:text="共1件商品"
            android:textSize="@dimen/text_size_13sp"
            android:textColor="@color/text_color_black"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_price"
            android:text="总价100  (含运费0)"
            android:textSize="@dimen/text_size_13sp"
            android:textColor="@color/text_color_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <include layout="@layout/view_line"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_height="37dp">

        <TextView
            android:id="@+id/tv_delete"
            android:background="@drawable/shape_specialty_order_list_black"
            android:text="删除订单"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/text_color_black"
            android:gravity="center"
            android:layout_margin="4dp"
            android:layout_width="72dp"
            android:layout_height="26dp" />
        <TextView
            android:id="@+id/tv_close"
            android:background="@drawable/shape_specialty_order_list_black"
            android:text="关闭订单"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/text_color_black"
            android:gravity="center"
            android:layout_margin="4dp"
            android:layout_width="72dp"
            android:layout_height="26dp" />
        <TextView
            android:id="@+id/tv_look"
            android:background="@drawable/shape_specialty_order_list_black"
            android:text="查看物流"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/text_color_black"
            android:gravity="center"
            android:layout_margin="4dp"
            android:layout_width="72dp"
            android:layout_height="26dp" />
        <TextView
            android:id="@+id/tv_continue"
            android:background="@drawable/shape_specialty_order_list"
            android:text="继续支付"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/color_23abac"
            android:gravity="center"
            android:layout_margin="4dp"
            android:layout_width="72dp"
            android:layout_height="26dp" />
        <TextView
            android:id="@+id/tv_sure"
            android:background="@drawable/shape_specialty_order_list"
            android:text="确认收货"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/color_23abac"
            android:gravity="center"
            android:layout_margin="4dp"
            android:layout_width="72dp"
            android:layout_height="26dp" />

    </LinearLayout>



</LinearLayout>