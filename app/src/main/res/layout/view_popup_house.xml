<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="面积（m²）"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/text_size_16sp" />

    <com.windmillsteward.jukutech.customview.flowlayout.TagFlowLayout
        android:id="@+id/tagFlowLayout_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        app:max_select="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="类型"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/text_size_15sp"
        android:visibility="gone" />

    <com.windmillsteward.jukutech.customview.flowlayout.TagFlowLayout
        android:id="@+id/tagFlowLayout_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        app:max_select="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="户型"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/text_size_15sp" />

    <com.windmillsteward.jukutech.customview.flowlayout.TagFlowLayout
        android:id="@+id/tagFlowLayout_huxing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        app:max_select="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_btn_them_deep_bg"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_15sp" />

        <TextView
            android:id="@+id/tv_reset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_btn_gray_bg"
            android:gravity="center"
            android:text="重置"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_15sp" />

    </LinearLayout>
</LinearLayout>