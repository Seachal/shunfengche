<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/color_bg_f0f0"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_height="@dimen/toolbar_height">

        <EditText
            android:id="@+id/et_search"
            android:hint="请输入类别或关键字"
            android:textSize="@dimen/text_size_14sp"
            android:background="@drawable/shape_toolbar_input_bg"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:textColor="@color/text_color_black"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/tv_cancel"
            android:text="取消"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_15sp"
            android:visibility="visible"
            android:layout_gravity="right|center_vertical"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <include layout="@layout/view_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="历史搜索"
            android:textSize="@dimen/text_size_17sp"
            android:textColor="@color/text_color_black"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_clear"
            android:text="清空"
            android:textColor="@color/color_them"
            android:textSize="@dimen/text_size_15sp"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <com.windmillsteward.jukutech.customview.flowlayout.FlowLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"/>
</LinearLayout>