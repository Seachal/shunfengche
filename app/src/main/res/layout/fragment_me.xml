<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_avatar_bg"
                android:layout_width="match_parent"
                android:layout_height="163dp"
                android:background="#e1e9fa"
                android:src="@mipmap/icon_fragment_me_bg"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:id="@+id/ll_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="53dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:src="@mipmap/icon_head_n" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="登录"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16sp" />

                    <TextView
                        android:id="@+id/tv_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/shape_solid_gray_r7"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="2dp"
                        android:text="lv.1"
                        android:textColor="@color/text_blue"
                        android:textSize="11sp" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_qiandao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/ll_login"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="14dp"
                android:gravity="center"
                android:visibility="gone"
                android:text="签到"
                android:textColor="@color/text_blue"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_login"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_bg_white"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_shoucang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35dp"
                    android:drawablePadding="12dp"
                    android:drawableTop="@mipmap/icon_mine_collect"
                    android:gravity="center"
                    android:paddingBottom="16dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="24dp"
                    android:text="我的收藏"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_12sp" />

                <TextView
                    android:id="@+id/tv_qianbao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:drawablePadding="12dp"
                    android:drawableTop="@mipmap/icon_mine_wallet"
                    android:gravity="center"
                    android:paddingBottom="16dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="24dp"
                    android:text="钱包"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_12sp" />

            </LinearLayout>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="35dp"
            android:background="#f1f0f0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginBottom="70dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="visible"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_youhuiquan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_mine_ticket"
                    android:drawablePadding="25dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="18dp"
                    android:paddingTop="18dp"
                    android:text="优惠券"
                    android:textColor="#9399a5"
                    android:textSize="@dimen/text_size_12sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/icon_arrow_right" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="35dp"
                android:background="#f1f0f0" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_jiangli"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_mine_tuigjl"
                    android:drawablePadding="30dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="18dp"
                    android:paddingTop="18dp"
                    android:text="推广奖励"
                    android:textColor="#9399a5"
                    android:textSize="@dimen/text_size_12sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/icon_arrow_right" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="35dp"
                android:background="#f1f0f0" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="visible"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_duihuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_duihuan"
                    android:drawablePadding="30dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="18dp"
                    android:paddingTop="18dp"
                    android:text="抽奖系统"
                    android:textColor="#9399a5"
                    android:textSize="@dimen/text_size_12sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/icon_arrow_right" />
            </RelativeLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="visible"
                android:layout_marginLeft="35dp"
                android:background="#f1f0f0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_fuwuzhongxin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_new_service_center"
                    android:drawablePadding="30dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="18dp"
                    android:paddingTop="18dp"
                    android:text="服务中心"
                    android:textColor="#9399a5"
                    android:textSize="@dimen/text_size_12sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/icon_arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="35dp"
                android:background="#f1f0f0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_shezhi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_new_service_center"
                    android:drawablePadding="30dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="18dp"
                    android:paddingTop="18dp"
                    android:text="系统设置"
                    android:textColor="#9399a5"
                    android:textSize="@dimen/text_size_12sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/icon_arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="35dp"
                android:background="#f1f0f0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_guanyu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_new_about_us"
                    android:drawablePadding="30dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="18dp"
                    android:paddingTop="18dp"
                    android:text="关于我们"
                    android:textColor="#9399a5"
                    android:textSize="@dimen/text_size_12sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/icon_arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="35dp"
                android:background="#f1f0f0" />


        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>