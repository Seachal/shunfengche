<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/color_white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="37dp">

        <TextView
            android:layout_marginLeft="12dp"
            android:text="订单号:"
            android:layout_marginRight="12dp"
            android:textSize="@dimen/text_size_13sp"
            android:textColor="@color/text_color_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_order_sn"
            android:text=""
            android:textSize="@dimen/text_size_13sp"
            android:textColor="@color/text_color_black"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_status"
            android:textSize="@dimen/text_size_13sp"
            android:textColor="@color/color_23abac"
            android:text="退款中"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="#fafafa"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="82dp">

        <ImageView
            android:id="@+id/iv_pic"
            android:src="@mipmap/icon_default_pic"
            android:scaleType="centerCrop"
            android:layout_width="72dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="72dp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_title"
                android:text=""
                android:textSize="@dimen/text_size_13sp"
                android:maxLines="2"
                android:layout_marginTop="7dp"
                android:ellipsize="end"
                android:textColor="@color/text_color_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_model"
                android:text=""
                android:layout_below="@+id/tv_title"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/text_size_13sp"
                android:textColor="@color/color_text_999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_price"
                android:text=""
                android:textColor="@color/color_price"
                android:textSize="@dimen/text_size_12sp"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="29dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_number"
                android:text=""
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="50dp"
                android:textColor="@color/color_text_999"
                android:textSize="@dimen/text_size_12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical|right"
        android:layout_height="37dp">

        <TextView
            android:text="交易金额："
            android:textSize="@dimen/text_size_13sp"
            android:textColor="@color/text_color_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_order_total_fee"
            android:text="￥100"
            android:textSize="@dimen/text_size_13sp"
            android:textColor="@color/text_color_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="退款金额："
            android:textSize="@dimen/text_size_13sp"
            android:textColor="@color/text_color_black"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_back_price"
            android:text="￥100"
            android:textSize="@dimen/text_size_13sp"
            android:textColor="@color/text_color_black"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_bottom"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_refund"
            android:background="@drawable/shape_specialty_order_list_black"
            android:text="退货"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/text_color_black"
            android:gravity="center"
            android:layout_margin="8dp"
            android:layout_width="72dp"
            android:layout_height="26dp" />

        <TextView
            android:id="@+id/tv_look"
            android:background="@drawable/shape_specialty_order_list_black"
            android:text="查看物流"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/text_color_black"
            android:gravity="center"
            android:layout_margin="8dp"
            android:layout_width="72dp"
            android:layout_height="26dp" />

    </LinearLayout>

    <View
        android:background="@color/color_bg_f0f0"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>



</LinearLayout>