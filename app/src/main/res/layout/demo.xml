<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_f0f0"
    android:orientation="vertical">
    <include layout="@layout/toolbar_detail"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/color_white"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:background="@color/color_bg_f0f0"
            android:layout_height="40dp">

            <TextView
                android:textSize="@dimen/text_size_16sp"
                android:text="*"
                android:layout_marginLeft="15dp"
                android:textColor="@color/color_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="特产信息"
                android:layout_marginLeft="4dp"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/text_color_black"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="45dp">

            <TextView
                android:textSize="@dimen/text_size_16sp"
                android:text="*"
                android:layout_marginLeft="15dp"
                android:textColor="@color/color_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="特产名字"
                android:layout_marginLeft="4dp"
                android:textSize="@dimen/text_size_16sp"
                android:textColor="@color/text_color_black"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_buyhouse_area"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:gravity="right"
                android:text=""
                android:maxLength="20"
                android:hint="请输入特产名字"
                android:maxLines="1"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_16sp"
                android:background="@color/color_white"
                android:layout_height="wrap_content" />



        </LinearLayout>
        <include layout="@layout/view_line_marginleft_15"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="45dp">

            <TextView
                android:textSize="@dimen/text_size_16sp"
                android:text="*"
                android:layout_marginLeft="15dp"
                android:textColor="@color/color_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="特产型号"
                android:layout_marginLeft="4dp"
                android:textSize="@dimen/text_size_16sp"
                android:textColor="@color/text_color_black"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_cx1"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:gravity="right"
                android:hint="请选择特产型号"
                android:maxLength="20"
                android:maxLines="1"

                android:singleLine="true"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_16sp"
                android:background="@color/color_white"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@mipmap/icon_jump"

                android:layout_marginRight="10dp"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <include layout="@layout/view_line_marginleft_15"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="45dp">

            <TextView
                android:textSize="@dimen/text_size_16sp"
                android:text="*"
                android:layout_marginLeft="15dp"
                android:textColor="@color/color_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="特产地址"
                android:layout_marginLeft="4dp"
                android:textSize="@dimen/text_size_16sp"
                android:textColor="@color/text_color_black"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="7"
                android:gravity="center_vertical|right"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/et_house_num"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:text=""
                    android:inputType="number"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:layout_marginRight="15dp"
                    android:textColorHint="@color/color_text_b3"
                    android:hint="请输入特产地址"
                    android:textSize="@dimen/text_size_16sp"
                    android:background="@color/color_white"
                    android:layout_height="wrap_content" />


            </LinearLayout>


        </LinearLayout>

        <include layout="@layout/view_line_marginleft_15"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="45dp">

            <TextView
                android:textSize="@dimen/text_size_16sp"
                android:text="*"
                android:layout_marginLeft="15dp"
                android:textColor="@color/color_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="联系人电话"
                android:layout_marginLeft="4dp"
                android:textSize="@dimen/text_size_16sp"
                android:textColor="@color/text_color_black"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_floor_num"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:gravity="right"
                android:text=""
                android:inputType="number"
                android:maxLength="20"
                android:maxLines="1"
                android:singleLine="true"
                android:textColorHint="@color/color_text_b3"
                android:hint="请输入手机号码"
                android:layout_marginRight="15dp"
                android:textSize="@dimen/text_size_16sp"
                android:background="@color/color_white"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="45dp">

            <TextView
                android:textSize="@dimen/text_size_16sp"
                android:text="*"
                android:layout_marginLeft="15dp"
                android:textColor="@color/color_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="发布 区域"
                android:layout_marginLeft="4dp"
                android:textSize="@dimen/text_size_16sp"
                android:textColor="@color/text_color_black"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_cx"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:gravity="right"
                android:hint="请选择发布区域"
                android:maxLength="20"
                android:maxLines="1"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_16sp"
                android:background="@color/color_white"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:background="@color/color_bg_f0f0"
        android:layout_height="92dp">

        <TextView
            android:id="@+id/tv_publish"
            android:text="发布"
            android:layout_marginTop="25dp"
            android:textSize="17sp"
            android:gravity="center"
            android:background="@drawable/shape_btn_them_deep_bg"
            android:textColor="@color/color_white"
            android:layout_width="218dp"
            android:layout_height="42dp" />

    </LinearLayout>
</LinearLayout>