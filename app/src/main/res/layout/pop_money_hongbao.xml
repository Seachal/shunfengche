<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/icon_hongbao_touming_bg"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_hongbao_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_big_hb_daojishi" />

        <Button
            android:id="@+id/btn_hb_djs"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text=""
            android:textColor="#f84831"
            android:textSize="@dimen/text_size_15sp"
            android:layout_alignBottom="@id/iv_hongbao_bg"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:background="@drawable/shape_bg_yellow_f8d000_r16" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_alignTop="@id/iv_hongbao_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-20dp"
            android:padding="5dp"
            android:layout_marginRight="65dp"
            android:src="@mipmap/icon_hongbao_close" />
    </RelativeLayout>
</LinearLayout>