<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.windmillsteward.jukutech.activity.newpage.yizhan.zhongjie_tgz.ZjTzgFabuZhaopinFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="招聘信息"
                android:textColor="#394043"
                android:textSize="@dimen/text_size_16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_gangwei_tips"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="*招聘岗位"
                        android:textColor="@color/color_text_666"
                        android:textSize="@dimen/text_size_16sp" />

                    <TextView
                        android:id="@+id/tv_gangwei_value"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableRight="@mipmap/icon_gray_arrow_right"
                        android:gravity="center_vertical"
                        android:hint="请选择招聘岗位"
                        android:paddingLeft="12dp"
                        android:paddingRight="13dp"
                        android:textColor="@color/text_color_black"
                        android:textColorHint="@color/hint_9f9f9f"
                        android:textSize="@dimen/text_size_15sp" />

                </LinearLayout>

                <include layout="@layout/view_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_renshu_tips"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="*招聘人数"
                        android:textColor="@color/color_text_666"
                        android:textSize="@dimen/text_size_16sp" />

                    <EditText
                        android:id="@+id/tv_renshu_value"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="输入招聘人数"
                        android:inputType="number"
                        android:maxLength="2"
                        android:paddingLeft="12dp"
                        android:paddingRight="13dp"
                        android:textColor="@color/text_color_black"
                        android:textColorHint="@color/hint_9f9f9f"
                        android:textSize="@dimen/text_size_15sp" />

                </LinearLayout>

                <include layout="@layout/view_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_sex_tips"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="*性&#160;&#160;&#8201;&#160;&#160;&#8201;&#160;&#160;&#8201;别"
                        android:textColor="@color/color_text_666"
                        android:textSize="@dimen/text_size_16sp" />

                    <TextView
                        android:id="@+id/tv_sex_buxian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:drawableLeft="@mipmap/select"
                        android:drawablePadding="15dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        android:paddingTop="10dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="10dp"
                        android:singleLine="true"
                        android:text="不限"
                        android:textColor="@color/text_color_black"
                        android:textColorHint="@color/hint_9f9f9f"
                        android:textSize="@dimen/text_size_15sp" />

                    <TextView
                        android:id="@+id/tv_sex_boy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:background="@null"
                        android:drawableLeft="@mipmap/unselect"
                        android:drawablePadding="15dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="0dp"
                        android:paddingTop="10dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="10dp"
                        android:singleLine="true"
                        android:text="男"
                        android:textColor="@color/text_color_black"
                        android:textColorHint="@color/hint_9f9f9f"
                        android:textSize="@dimen/text_size_15sp" />

                    <TextView
                        android:id="@+id/tv_sex_girl"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:background="@null"
                        android:drawableLeft="@mipmap/unselect"
                        android:drawablePadding="15dp"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:text="女"
                        android:textColor="@color/text_color_black"
                        android:textColorHint="@color/hint_9f9f9f"
                        android:textSize="@dimen/text_size_15sp" />

                </LinearLayout>

                <include layout="@layout/view_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_age_tips"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="*年&#160;&#160;&#8201;&#160;&#160;&#8201;&#160;&#160;&#8201;龄"
                        android:textColor="@color/color_text_666"
                        android:textSize="@dimen/text_size_16sp" />

                    <TextView
                        android:id="@+id/tv_age_value"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请选择年龄"
                        android:inputType="number"
                        android:paddingLeft="12dp"
                        android:paddingRight="13dp"
                        android:textColor="@color/text_color_black"
                        android:textColorHint="@color/hint_9f9f9f"
                        android:textSize="@dimen/text_size_15sp" />

                </LinearLayout>

                <include layout="@layout/view_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_xueli_tips"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="*学&#160;&#160;&#8201;&#160;&#160;&#8201;&#160;&#160;&#8201;历"
                        android:textColor="@color/color_text_666"
                        android:textSize="@dimen/text_size_16sp" />

                    <TextView
                        android:id="@+id/tv_xueli_value"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableRight="@mipmap/icon_gray_arrow_right"
                        android:gravity="center_vertical"
                        android:hint="请选择学历"
                        android:paddingLeft="12dp"
                        android:paddingRight="13dp"
                        android:textColor="@color/text_color_black"
                        android:textColorHint="@color/hint_9f9f9f"
                        android:textSize="@dimen/text_size_15sp" />

                </LinearLayout>

                <include layout="@layout/view_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_jingyan_tips"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="*工作经验"
                        android:textColor="@color/color_text_666"
                        android:textSize="@dimen/text_size_16sp" />

                    <TextView
                        android:id="@+id/tv_jingyan_value"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableRight="@mipmap/icon_gray_arrow_right"
                        android:gravity="center_vertical"
                        android:hint="请选择工作经验"
                        android:paddingLeft="12dp"
                        android:paddingRight="13dp"
                        android:textColor="@color/text_color_black"
                        android:textColorHint="@color/hint_9f9f9f"
                        android:textSize="@dimen/text_size_15sp" />

                </LinearLayout>

                <include layout="@layout/view_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_quyu_tips"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="*工作区域"
                        android:textColor="@color/color_text_666"
                        android:textSize="@dimen/text_size_16sp" />

                    <TextView
                        android:id="@+id/tv_quyu_value"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableRight="@mipmap/icon_gray_arrow_right"
                        android:gravity="center_vertical"
                        android:hint="请选择区域"
                        android:paddingLeft="12dp"
                        android:paddingRight="13dp"
                        android:textColor="@color/text_color_black"
                        android:textColorHint="@color/hint_9f9f9f"
                        android:textSize="@dimen/text_size_15sp" />

                </LinearLayout>

                <include layout="@layout/view_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_address_tips"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="*公司地址"
                        android:textColor="@color/color_text_666"
                        android:textSize="@dimen/text_size_16sp" />

                    <EditText
                        android:id="@+id/tv_address_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入地址"
                        android:paddingLeft="12dp"
                        android:paddingRight="13dp"
                        android:text=""
                        android:textColor="@color/text_color_black"
                        android:textColorHint="@color/hint_9f9f9f"
                        android:textSize="@dimen/text_size_15sp" />

                    <ImageView
                        android:id="@+id/iv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="15dp"
                        android:src="@mipmap/location" />

                </LinearLayout>

                <include layout="@layout/view_line" />

                <LinearLayout
                    android:id="@+id/lay_ll_rixin_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_money_tips"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="11dp"
                        android:paddingBottom="11dp"
                        android:text="*月&#160;&#160;&#8201;&#160;&#160;&#8201;&#160;&#160;&#8201;薪"
                        android:textColor="@color/color_text_666"
                        android:textSize="@dimen/text_size_16sp" />

                    <TextView
                        android:id="@+id/tv_shichang_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="@null"
                        android:drawableLeft="@mipmap/select"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:hint="市场定价"
                        android:paddingLeft="0dp"
                        android:paddingTop="10dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="10dp"
                        android:singleLine="true"
                        android:textColor="#394043"
                        android:textSize="@dimen/text_size_15sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_zidingyi_select"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:background="@null"
                        android:drawableLeft="@mipmap/select"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:singleLine="true"
                        android:text="自定义价格"
                        android:textColor="@color/text_color_black"
                        android:textColorHint="@color/hint_9f9f9f"
                        android:textSize="@dimen/text_size_15sp" />

                    <TextView
                        android:id="@+id/tv_mianyi_select"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:drawableLeft="@mipmap/unselect"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:singleLine="true"
                        android:text="面议"
                        android:textColor="@color/text_color_black"
                        android:textColorHint="@color/hint_9f9f9f"
                        android:textSize="@dimen/text_size_15sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_zidingyi_xinzi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="（2选1）"
                        android:textColor="@color/color_red"
                        android:textSize="@dimen/text_size_16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="12dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <EditText
                            android:id="@+id/ed_money_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_shopping_cart_list_frame"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:gravity="center"
                            android:hint="输入薪资"
                            android:maxLength="6"
                            android:inputType="number"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textColor="@color/text_color_black"
                            android:textColorHint="@color/hint_9f9f9f"
                            android:textSize="@dimen/text_size_14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:singleLine="true"
                            android:text="-"
                            android:textColor="@color/text_color_black"
                            android:textColorHint="@color/hint_9f9f9f"
                            android:textSize="@dimen/text_size_15sp" />

                        <EditText
                            android:id="@+id/ed_money_end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/shape_shopping_cart_list_frame"
                            android:gravity="center"
                            android:hint="输入薪资"
                            android:inputType="number"
                            android:maxLength="6"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textColor="@color/text_color_black"
                            android:textColorHint="@color/hint_9f9f9f"
                            android:textSize="@dimen/text_size_14sp" />
                    </LinearLayout>

                </LinearLayout>

                <include layout="@layout/view_line" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_fuli_tips"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text=" 福&#160;&#160;&#8201;&#160;&#160;&#8201;&#160;&#160;&#8201;利"
                        android:textColor="@color/color_text_666"
                        android:textSize="@dimen/text_size_16sp" />

                    <TextView
                        android:id="@+id/tv_fuli_value"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableRight="@mipmap/icon_gray_arrow_right"
                        android:gravity="center_vertical"
                        android:hint="请选择福利"
                        android:paddingLeft="12dp"
                        android:paddingRight="13dp"
                        android:textColor="@color/text_color_black"
                        android:textColorHint="@color/hint_9f9f9f"
                        android:textSize="@dimen/text_size_15sp" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:paddingLeft="12dp" />

                <include layout="@layout/view_line" />

                <TextView
                    android:id="@+id/tv_miaoshu_tips"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="职位描述"
                    android:textColor="@color/color_text_666"
                    android:textSize="@dimen/text_size_16sp" />

                <EditText
                    android:id="@+id/et_miaoshu_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/shape_border_gray_dad9d9"
                    android:gravity="left|top"
                    android:hint="请输入职位描述"
                    android:maxLength="200"
                    android:minLines="7"
                    android:padding="10dp"
                    android:textColor="@color/text_color_black"
                    android:textColorHint="@color/hint_9f9f9f"
                    android:textSize="@dimen/text_size_15sp" />

                <include layout="@layout/layout_luzhi_yuyin" />

                <include layout="@layout/layout_paizhao" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="16dp"
                    android:text="只有匹配成功才能看到您的所有信息"
                    android:textColor="@color/color_red"
                    android:textSize="@dimen/text_size_13sp" />

                <include layout="@layout/layout_shipin" />

                <include layout="@layout/view_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_lianxiren_tips"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="*联&#160;&#160;系&#160;&#160;人"
                        android:textColor="@color/color_text_666"
                        android:textSize="@dimen/text_size_16sp" />

                    <EditText
                        android:id="@+id/tv_lianxiren_value"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入联系人姓名"
                        android:maxLength="5"
                        android:paddingLeft="12dp"
                        android:paddingRight="13dp"
                        android:textColor="@color/text_color_black"
                        android:textColorHint="@color/hint_9f9f9f"
                        android:textSize="@dimen/text_size_15sp" />

                </LinearLayout>

                <include layout="@layout/view_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_phone_tips"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="*联系电话"
                        android:textColor="@color/color_text_666"
                        android:textSize="@dimen/text_size_16sp" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="联系电话"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:paddingLeft="12dp"
                        android:singleLine="true"
                        android:textColor="@color/text_color_black"
                        android:textColorHint="@color/hint_9f9f9f"
                        android:textSize="@dimen/text_size_15sp" />

                    <TextView
                        android:id="@+id/tv_change_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/shape_text_white_bg_r4_stro_3172f4"
                        android:padding="5dp"
                        android:text="更换手机号" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/color_bg" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <include layout="@layout/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="信息费20.00"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_16sp" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="159dp"
            android:layout_height="match_parent"
            android:background="@color/common_color"
            android:gravity="center"
            android:text="发布"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16sp" />
    </LinearLayout>

    <View
        android:id="@+id/view_line_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="-1dp" />
</LinearLayout>
