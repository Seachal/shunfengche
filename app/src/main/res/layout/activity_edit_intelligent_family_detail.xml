<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/color_white"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_detail"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="254dp">

                    <com.windmillsteward.jukutech.customview.FlyBanner
                        android:id="@+id/flyBanner"
                        android:layout_width="match_parent"
                        android:layout_height="254dp"/>

                    <ImageView
                        android:id="@+id/iv_play"
                        android:src="@mipmap/icon_play"
                        android:layout_gravity="center"
                        android:layout_width="62dp"
                        android:visibility="gone"
                        android:layout_height="62dp" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="74dp">

                    <com.windmillsteward.jukutech.customview.CircleImageView
                        android:id="@+id/civ_header"
                        android:layout_width="39dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="39dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_username"
                            android:text="大海"
                            android:textSize="@dimen/text_size_16sp"
                            android:textColor="@color/text_color_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_post_area"
                                android:text="发布于广州天河区"
                                android:textSize="@dimen/text_size_14sp"
                                android:textColor="@color/color_text_78"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tv_range"
                                android:text="据我70m"
                                android:textSize="@dimen/text_size_12sp"
                                android:textColor="@color/color_text_999"
                                android:layout_width="wrap_content"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:layout_marginRight="12dp"
                                android:layout_marginLeft="12dp"
                                android:background="@drawable/shape_btn_gray_bg"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <include layout="@layout/view_line"/>

                <TextView
                    android:id="@+id/tv_desc"
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/text_color_black"
                    android:textStyle="bold"
                    android:text="本人出国，狗给人样几天500块"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="12dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_price"
                        android:textStyle="bold"
                        android:text="￥600"
                        android:textColor="@color/color_them"
                        android:textSize="@dimen/text_size_16sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_update_time"
                        android:text="8分钟前"
                        android:textSize="@dimen/text_size_12sp"
                        android:textColor="@color/color_text_78"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/color_text_78"
                        android:layout_height="13dp"/>
                    <TextView
                        android:id="@+id/tv_read_times"
                        android:text="浏览20次"
                        android:textSize="@dimen/text_size_12sp"
                        android:textColor="@color/color_text_78"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:background="@color/color_them_alpha"
                    android:layout_height="15dp"/>

                <TextView
                    android:text="详细需求"
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/color_them"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:background="@color/color_divider"
                    android:layout_height="0.5dp"/>

                <com.windmillsteward.jukutech.customview.ExpandTextView
                    android:id="@+id/expand_more"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    app:contentTextSize="@dimen/text_size_14sp"
                    app:textContentColor="@color/color_family_detail"
                    app:expandHint="查看更多"
                    app:hintTextSize="@dimen/text_size_14sp"
                    app:foldHint="收起"
                    app:textHintColor="@color/color_23abac"
                    app:minVisibleLines="5"/>

                <View
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:background="@color/color_them_alpha"
                    android:layout_height="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="64dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center_vertical"
                        android:layout_height="32dp">

                        <TextView
                            android:text="抢单人"
                            android:textSize="@dimen/text_size_15sp"
                            android:textColor="@color/text_color_black"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text=":"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_o_user_name"
                            android:text=""
                            android:textSize="@dimen/text_size_13sp"
                            android:textColor="@color/text_color_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center_vertical"
                        android:layout_height="32dp">

                        <TextView
                            android:text="联系电话"
                            android:textSize="@dimen/text_size_15sp"
                            android:textColor="@color/text_color_black"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text=":"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_o_user_phone"
                            android:text=""
                            android:textSize="@dimen/text_size_13sp"
                            android:textColor="@color/text_color_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@color/color_them_alpha"
                    android:layout_height="40dp">

                    <TextView
                        android:text="托管ID："
                        android:textSize="@dimen/text_size_16sp"
                        android:textColor="@color/color_them"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_hosted_id"
                        android:text="1234567890"
                        android:textSize="@dimen/text_size_16sp"
                        android:textColor="@color/text_color_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:background="@drawable/shape_bottom_shadow"
            android:layout_height="10dp"/>
    </FrameLayout>


    <LinearLayout
        android:id="@+id/linear_bottom"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="46dp">

        <LinearLayout
            android:id="@+id/linear_delete"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_delete"
                android:src="@mipmap/icon_rub"
                android:layout_width="18dp"
                android:layout_height="18dp" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:text="删除"
                android:textColor="@color/color_5d5f69"
                android:textSize="@dimen/text_size_13sp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_edit"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_edit"
                android:src="@mipmap/icon_writeagain"
                android:layout_width="18dp"
                android:layout_height="18dp" />

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="wrap_content"
                android:text="编辑"
                android:textColor="@color/color_5d5f69"
                android:textSize="@dimen/text_size_13sp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>