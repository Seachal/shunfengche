<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/color_bg_f0f0"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_detail"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear_class1"
            android:layout_width="match_parent"
            android:background="@color/color_white"
            android:gravity="center_vertical"
            android:layout_height="45dp">

            <TextView
                android:id="@+id/tv_class1"
                android:layout_marginLeft="15dp"
                android:textSize="@dimen/text_size_16sp"
                android:textColor="@color/text_color_black"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@mipmap/icon_jump"
                android:layout_width="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <include layout="@layout/view_line_marginleft_15"/>
        <LinearLayout
            android:id="@+id/linear_class2"
            android:layout_width="match_parent"
            android:background="@color/color_white"
            android:gravity="center_vertical"
            android:layout_height="45dp">

            <TextView
                android:id="@+id/tv_class2"
                android:layout_marginLeft="15dp"
                android:textSize="@dimen/text_size_16sp"
                android:textColor="@color/text_color_black"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@mipmap/icon_jump"
                android:layout_width="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>