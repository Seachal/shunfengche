<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/toolbar_iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:src="@mipmap/icon_new_arrow_back" />

        <TextView
            android:id="@+id/toolbar_iv_title"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:padding="9.5dp"
            android:singleLine="true"
            android:text="标题"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18sp"
            />

        <ImageView
            android:id="@+id/toolbar_iv_right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right|center_vertical"
            android:padding="10dp"
            android:src="@mipmap/shoucang"
            android:visibility="gone" />

        <TextView
            android:id="@+id/toolbar_tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:text="哈哈"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_15sp"
            android:visibility="gone" />


    </FrameLayout>

    <EditText
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:id="@+id/et_content"
        android:maxLength="7"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hight_padding_50"
        android:textSize="@dimen/text_size_16sp"
        android:textColor="@color/text_color_black"
        android:gravity="center_vertical"
        android:background="#eeeeee"
        android:hint="请输入昵称"
        android:lineSpacingExtra="5dp"
        />

    <TextView
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/tv_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hight_padding_50"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_btn_logout"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_17sp" />

</LinearLayout>