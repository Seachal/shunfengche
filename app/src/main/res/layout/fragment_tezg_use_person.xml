<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context="com.windmillsteward.jukutech.activity.newpage.yizhan.zhongjie_tgz.YonggongDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/tv_bianhao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="20184515645258979"
                android:textColor="@color/color_aaaaaa"
                android:textSize="@dimen/text_size_13sp" />

        </LinearLayout>

        <include layout="@layout/view_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/tv_bianti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="招聘水泥工3名，装修工5名"
                android:textColor="@color/color_aaaaaa"
                android:textSize="@dimen/text_size_13sp" />

        </LinearLayout>

        <include layout="@layout/view_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="发布地区"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/tv_diqu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:lineSpacingExtra="5dp"
                android:text="张家区"
                android:textColor="@color/color_aaaaaa"
                android:textSize="@dimen/text_size_13sp" />

        </LinearLayout>

        <include layout="@layout/view_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="详细地址"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/icon_marker"
                android:gravity="right"
                android:lineSpacingExtra="5dp"
                android:text="科学大道中11号"
                android:textColor="@color/color_aaaaaa"
                android:textSize="@dimen/text_size_13sp" />

        </LinearLayout>

        <include layout="@layout/view_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="工作日期"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:lineSpacingExtra="5dp"
                android:text="2018/09/13"
                android:textColor="@color/color_aaaaaa"
                android:textSize="@dimen/text_size_13sp" />

        </LinearLayout>

        <include layout="@layout/view_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="工作时间"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/tv_pipeishijian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:lineSpacingExtra="5dp"
                android:text="10：00"
                android:textColor="@color/color_aaaaaa"
                android:textSize="@dimen/text_size_13sp" />

        </LinearLayout>

        <include layout="@layout/view_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="工作描述"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_size_14sp" />

        </LinearLayout>

        <include layout="@layout/view_line" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:lineSpacingExtra="5dp"
            android:padding="16dp"
            android:text="如果你无法简洁的表达你的想法，那只说明你还不够了解它。如果你无法简洁的表达你的想法，那只说明你还不够了解它。如果你无法简洁的表达你的想法，那只说明你还不够了解它。"
            android:textColor="@color/color_aaaaaa"
            android:textSize="@dimen/text_size_13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:text="温馨提示"
                android:textColor="#fbb939"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="如果您工作已完成，请点击确认完成工作。管家会及时通知雇主为您确认支付薪资。"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/tv_finish"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="27dp"
                android:layout_marginTop="27dp"
                android:background="@drawable/shape_bg_blue_60bdd1"
                android:gravity="center"
                android:padding="10dp"
                android:text="确认完成工作"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_15sp" />

        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
