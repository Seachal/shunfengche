<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_default_pic" />

        <LinearLayout
            android:layout_alignBottom="@id/iv_pic"
            android:layout_toRightOf="@id/iv_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:background="@color/text_f7f5f6"

            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_marginTop="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="博山菜"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_14sp" />

                <LinearLayout
                    android:id="@+id/lay_ll_star"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp"
                    android:visibility="visible"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_star1"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@mipmap/icon_collect_y"/>

                    <ImageView
                        android:id="@+id/iv_star2"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@mipmap/icon_collect_y"/>
                    <ImageView
                        android:id="@+id/iv_star3"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@mipmap/icon_collect_y"/>
                    <ImageView
                        android:id="@+id/iv_star4"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@mipmap/icon_collect_y"/>
                    <ImageView
                        android:id="@+id/iv_star5"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@mipmap/icon_collect_y"/>
                </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_evaluation_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.7"
                    android:textColor="@color/color_41a4f8"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分"
                    android:textColor="@color/color_41a4f8"
                    android:textSize="@dimen/text_size_12sp" />
                <TextView
                    android:id="@+id/tv_evaluation_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="421条评论"
                    android:textColor="@color/color_text_666"
                    android:textSize="@dimen/text_size_12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="100米"
                android:textColor="@color/color_text_666"
                android:textSize="@dimen/text_size_12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp"
                android:gravity="center_vertical"
                android:layout_height="30dp">

                <com.windmillsteward.jukutech.customview.flowlayout.FlowLayout
                    android:id="@+id/fl_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/tv_yuding"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_bg_orange2"
                    android:gravity="center"
                    android:text="预定"
                    android:textColor="@color/color_white"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_renjun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="35dp"
            android:text="人均：152元"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_12sp" />
    </RelativeLayout>


</LinearLayout>