<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="#5f8cf7"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/toolbar_iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:src="@mipmap/icon_new_arrow_white_back" />

        <TextView
            android:id="@+id/toolbar_iv_title"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:padding="9.5dp"
            android:singleLine="true"
            android:text="标题"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/toolbar_iv_right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right|center_vertical"
            android:padding="10dp"
            android:src="@mipmap/shoucang"
            android:visibility="gone" />

        <TextView
            android:id="@+id/toolbar_tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:text="哈哈"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_15sp"
            android:visibility="gone" />


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#5f8cf7"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="账户余额(元)"
            android:alpha="0.5"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_13sp" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:textSize="36sp" />

        <com.windmillsteward.jukutech.utils.StateButton
            android:id="@+id/btn_manage"
            android:layout_width="111dp"
            android:layout_height="30dp"
            android:padding="0dp"
            android:layout_marginTop="30dp"
            android:text="管理提现账户"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@android:color/white"
            app:normalBackgroundColor="#5f8cf7"
            app:pressedBackgroundColor="#5f8cf7"
            app:normalStrokeColor="@color/color_white"
            app:pressedStrokeColor="@color/color_white"
            app:pressedStrokeWidth="1dp"
            app:normalStrokeWidth="1dp"
            app:radius="13dp" />
    </LinearLayout>

    <com.windmillsteward.jukutech.utils.StateButton
        android:id="@+id/btn_recharge"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="46dp"
        android:layout_marginLeft="28dp"
        android:padding="0dp"
        android:layout_marginRight="28dp"
        android:gravity="center"
        android:text="充值"
        android:textSize="@dimen/text_size_16sp"
        android:textColor="@android:color/white"
        app:normalBackgroundColor="@color/text_blue"
        app:pressedBackgroundColor="@color/text_blue"
        app:radius="20dp" />

    <com.windmillsteward.jukutech.utils.StateButton
        android:id="@+id/btn_withdraw"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="32dp"
        android:text="提现"
        android:gravity="center"
        android:padding="0dp"
        android:textColor="@color/text_blue"
        app:normalBackgroundColor="@color/white"
        app:pressedBackgroundColor="@color/white"
        app:normalStrokeColor="#5f8cf7"
        app:pressedStrokeColor="#5f8cf7"
        android:textSize="@dimen/text_size_16sp"
        app:pressedStrokeWidth="1dp"
        app:normalStrokeWidth="1dp"
        app:radius="20dp" />
</LinearLayout>