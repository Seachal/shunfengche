<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_white_5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_hight_42"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="订单确认"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_16sp" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@mipmap/icon_hb_close" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/line_cdd4dc" />

        <TextView
            android:id="@+id/tv_select"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hight_padding_50"
            android:gravity="center_vertical"
            android:hint="选择时间"
            android:textColor="@color/text_color_black"
            android:textColorHint="@color/hint_9f9f9f"
            android:textSize="@dimen/text_size_16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_cdd4dc" />

        <EditText
            android:id="@+id/et_num"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hight_padding_50"
            android:background="@null"
            android:hint="预定人数"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="@color/text_color_black"
            android:textColorHint="@color/hint_9f9f9f"
            android:textSize="@dimen/text_size_16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_cdd4dc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/hight_padding_50"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_contact_person"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="联系人"
                android:maxLength="5"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/hint_9f9f9f"
                android:textSize="@dimen/text_size_16sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:background="@color/line_cdd4dc" />

            <EditText
                android:id="@+id/et_contact_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="联系电话"
                android:maxLength="11"
                android:inputType="number"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/hint_9f9f9f"
                android:textSize="@dimen/text_size_16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_cdd4dc" />

        <EditText
            android:id="@+id/et_remark"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:lines="3"
            android:textColorHint="@color/hint_9f9f9f"
            android:textColor="@color/text_color_black"
            android:padding="5dp"
            android:gravity="top"
            android:textSize="@dimen/text_size_14sp"
            android:hint="请输入备注"
            android:background="@drawable/shape_text_white_r4_bg_stro1_black"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_yuding"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_hight_42"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="预定"
            android:textSize="@dimen/text_size_16sp"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:background="@drawable/shape_ec613e_5" />
    </LinearLayout>


</LinearLayout>