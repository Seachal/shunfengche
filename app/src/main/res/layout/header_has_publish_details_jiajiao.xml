<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="18dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:paddingRight="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号"
                android:textColor="#394043"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/tv_dingdan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="54562562356553525"
                android:textColor="#9399a5"
                android:textSize="@dimen/text_size_15sp" />

        </LinearLayout>

        <include layout="@layout/view_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="18dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:paddingRight="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="辅导科目"
                android:textColor="#394043"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/tv_kemu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="语文"
                android:textColor="#9399a5"
                android:textSize="@dimen/text_size_15sp" />

        </LinearLayout>

        <include layout="@layout/view_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="18dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:paddingRight="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="辅导年级"
                android:textColor="#394043"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/tv_nianji"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="招聘水泥工3名，装修工5名"
                android:textColor="#9399a5"
                android:textSize="@dimen/text_size_15sp" />

        </LinearLayout>

        <include layout="@layout/view_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="18dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:paddingRight="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="工作区域"
                android:textColor="#394043"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/tv_gongzhong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:lineSpacingExtra="5dp"
                android:text="张店区"
                android:textColor="#9399a5"
                android:textSize="@dimen/text_size_15sp" />

        </LinearLayout>

        <include layout="@layout/view_line" />

        <LinearLayout
            android:id="@+id/lay_ll_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="18dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:paddingRight="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="详细地址"
                android:textColor="#394043"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/location"
                android:gravity="right"
                android:lineSpacingExtra="5dp"
                android:text="科学大道中11号"
                android:textColor="#9399a5"
                android:textSize="@dimen/text_size_15sp" />

        </LinearLayout>

        <include layout="@layout/view_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="18dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:paddingRight="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="预计时间"
                android:textColor="#394043"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/tv_yujishijian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:gravity="right"
                android:lineSpacingExtra="5dp"
                android:text="2018/08/09~2018/10/10"
                android:textColor="#9399a5"
                android:textSize="@dimen/text_size_15sp" />

        </LinearLayout>

        <include layout="@layout/view_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="18dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:paddingRight="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="薪资待遇"
                android:textColor="#394043"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/tv_daiyu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:lineSpacingExtra="5dp"
                android:text="200-300课时"
                android:textColor="#9399a5"
                android:textSize="@dimen/text_size_15sp" />

        </LinearLayout>

        <include layout="@layout/view_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="18dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:paddingRight="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="辅导时间"
                android:textColor="#394043"
                android:textSize="@dimen/text_size_16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_zhoumo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/select"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="周末"
                android:textColor="#394043"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/tv_gongzhongri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@mipmap/unselect"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="工作日"
                android:textColor="#394043"
                android:textSize="@dimen/text_size_14sp" />

        </LinearLayout>

        <include layout="@layout/view_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="18dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:paddingRight="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="费用"
                android:textColor="#394043"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/tv_feiyong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:lineSpacingExtra="5dp"
                android:text="信息费¥20.00"
                android:textColor="#9399a5"
                android:textSize="@dimen/text_size_15sp" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>