<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/color_bg_f0f0"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_detail"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:background="@color/color_white"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_departure_place"
                android:text=""
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_16sp"
                android:hint="请设定出发地"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
            <include layout="@layout/view_line_marginleft_15"/>
            <TextView
                android:id="@+id/tv_destination_place"
                android:text=""
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_16sp"
                android:hint="请设定目的地"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
            <include layout="@layout/view_line_marginleft_15"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="45dp">
                <TextView
                    android:id="@+id/tv_go_off"
                    android:text=""
                    android:hint="出发时间"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/text_size_16sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@color/color_divider"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/tv_people_num"
                    android:text=""
                    android:hint="同行人数"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/text_size_16sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp" />

            </LinearLayout>
            <include layout="@layout/view_line_marginleft_15"/>
            <!--<EditText-->
                <!--android:id="@+id/et_price"-->
                <!--android:textColor="@color/text_color_black"-->
                <!--android:textSize="@dimen/text_size_16sp"-->
                <!--android:background="@color/color_white"-->
                <!--android:layout_width="match_parent"-->
                <!--android:hint="价格（元）"-->
                <!--android:maxLines="1"-->
                <!--android:singleLine="true"-->
                <!--android:paddingLeft="15dp"-->
                <!--android:layout_height="45dp" />-->
            <!--<include layout="@layout/view_line_marginleft_15"/>-->
            <TextView
                android:id="@+id/tv_remark"
                android:text=""
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_16sp"
                android:hint="备注（选填）"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
            <View
                android:background="@color/color_bg_f0f0"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <EditText
                android:id="@+id/et_contact_person"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_16sp"
                android:background="@color/color_white"
                android:layout_width="match_parent"
                android:hint="联系人"
                android:maxLines="1"
                android:singleLine="true"
                android:paddingLeft="15dp"
                android:layout_height="45dp" />
            <include layout="@layout/view_line_marginleft_15"/>
            <EditText
                android:id="@+id/et_contact_tel"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_16sp"
                android:inputType="phone"
                android:background="@color/color_white"
                android:layout_width="match_parent"
                android:hint="联系电话"
                android:maxLines="1"
                android:singleLine="true"
                android:paddingLeft="15dp"
                android:layout_height="45dp" />
            <include layout="@layout/view_line_marginleft_15"/>
            <TextView
                android:id="@+id/tv_publish_area"
                android:text=""
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_16sp"
                android:hint="选择发布地区"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="45dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:background="@color/color_bg_f0f0"
                android:layout_height="100dp">
                <TextView
                    android:id="@+id/tv_publish"
                    android:text="发布"
                    android:layout_marginTop="20dp"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:background="@drawable/shape_btn_them_deep_bg"
                    android:textColor="@color/color_white"
                    android:layout_width="218dp"
                    android:layout_height="42dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</LinearLayout>