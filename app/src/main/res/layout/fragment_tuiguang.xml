<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lh2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.windmillsteward.jukutech.activity.newpage.me.TuiguangFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_guize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="26dp"
            android:background="@drawable/shape_tuiguang"
            android:paddingBottom="9dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="9dp"
            android:text="等级规则"
            android:textColor="#394043"
            android:textSize="@dimen/text_size_15sp" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_tuiguang_logo"
            android:layout_width="207dp"
            android:layout_height="190dp"
            android:layout_marginTop="-9dp"
            android:background="@mipmap/icon_tuiguang_logo" />
            <TextView
                android:id="@+id/tv_user_shenfen"
                android:layout_width="wrap_content"
                android:text="xxx"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_alignBottom="@id/iv_tuiguang_logo"
                android:textSize="24sp"
                android:textColor="@color/color_white"

                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rela_cntainer01"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:background="@drawable/shape_tuiguang_bg">

                <TextView
                    android:id="@+id/tv_num_01"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_tuiguang_bg_deep"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_18sp" />

            </RelativeLayout>

            <View
                android:id="@+id/view_line_01"
                android:layout_width="56dp"
                android:layout_height="2dp"
                android:layout_marginLeft="-4.5dp"
                android:layout_marginRight="-4.5dp"
                android:background="#3172f4" />

            <RelativeLayout
                android:id="@+id/rela_cntainer02"
                android:layout_width="39dp"
                android:layout_height="39dp">

                <TextView
                    android:id="@+id/tv_num_02"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_tuiguang_bg_grey"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_18sp" />

            </RelativeLayout>

            <View
                android:id="@+id/view_line_02"
                android:layout_width="56dp"
                android:layout_height="2dp"
                android:layout_marginLeft="-4.5dp"
                android:layout_marginRight="-4.5dp"
                android:background="#9399a5" />

            <RelativeLayout
                android:id="@+id/rela_cntainer03"
                android:layout_width="39dp"
                android:layout_height="39dp">

                <TextView
                    android:id="@+id/tv_num_03"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_tuiguang_bg_grey"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_18sp" />

            </RelativeLayout>

            <View
                android:id="@+id/view_line_03"
                android:layout_width="56dp"
                android:layout_height="2dp"
                android:layout_marginLeft="-4.5dp"
                android:layout_marginRight="-4.5dp"
                android:background="#9399a5" />

            <RelativeLayout
                android:id="@+id/rela_cntainer04"
                android:layout_width="39dp"
                android:layout_height="39dp">

                <TextView
                    android:id="@+id/tv_num_04"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_tuiguang_bg_grey"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_18sp" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_text01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="普通会员"
                android:textColor="#394043"
                android:textSize="@dimen/text_size_18sp" />

            <TextView
                android:id="@+id/tv_text02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="主任"
                android:textColor="#9399a5"
                android:textSize="@dimen/text_size_18sp" />

            <TextView
                android:id="@+id/tv_text03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="经理"
                android:textColor="#9399a5"
                android:textSize="@dimen/text_size_18sp" />

            <TextView
                android:id="@+id/tv_text04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="总监"
                android:textColor="#9399a5"
                android:textSize="@dimen/text_size_18sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="50dp"
            android:background="#f8f8fa" />

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/ll_tequan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_shenfen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="17dp"
                android:paddingLeft="20dp"
                android:paddingTop="25dp"
                android:text="普通会员特权"
                android:textColor="#394043"
                android:textSize="@dimen/text_size_17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_tequan01"
                        android:layout_width="73dp"
                        android:layout_height="73dp"
                        android:src="@mipmap/icon_dixin" />

                    <TextView
                        android:id="@+id/tv_tequan01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="11dp"
                        android:text="底薪"
                        android:textColor="#394043"
                        android:textSize="@dimen/text_size_15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_tequan02"
                        android:layout_width="73dp"
                        android:layout_height="73dp"
                        android:src="@mipmap/icon_yucheng" />

                    <TextView
                        android:id="@+id/tv_tequan02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="11dp"
                        android:text="育成"
                        android:textColor="#394043"
                        android:textSize="@dimen/text_size_15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_tequan03"
                        android:layout_width="73dp"
                        android:layout_height="73dp"
                        android:src="@mipmap/icon_guanli" />

                    <TextView
                        android:id="@+id/tv_tequan03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="11dp"
                        android:text="管理"
                        android:textColor="#394043"
                        android:textSize="@dimen/text_size_15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_tequan04"
                        android:layout_width="73dp"
                        android:layout_height="73dp"
                        android:src="#e3e3e3" />

                    <TextView
                        android:id="@+id/tv_tequan04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="11dp"
                        android:text="敬请期待"
                        android:textColor="#394043"
                        android:textSize="@dimen/text_size_15sp" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="14dp"
                android:background="#f8f8fa" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_jiangli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_tuiguang"
            android:paddingBottom="9dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="9dp"
            android:text="已获得奖励"
            android:textColor="#394043"
            android:textSize="@dimen/text_size_15sp" />

        <TextView
            android:layout_marginTop="-50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="17dp"
            android:paddingLeft="20dp"
            android:paddingTop="25dp"
            android:text="离下一等级还差"
            android:textColor="#394043"
            android:textSize="@dimen/text_size_17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.windmillsteward.jukutech.customview.CircleProgressBar
                    android:id="@+id/circleProgressBar"
                    android:layout_width="101dp"
                    android:layout_height="101dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    lh2:circleWidth="6dp"
                    lh2:firstColor="#dee0e4"
                    lh2:secondColor="#3172f4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="23dp"
                    android:layout_marginTop="15dp"
                    android:text="推荐注册认证人数"
                    android:textColor="#394043"
                    android:textSize="@dimen/text_size_15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.windmillsteward.jukutech.customview.CircleProgressBar
                    android:id="@+id/circleProgressBar2"
                    android:layout_width="101dp"
                    android:layout_height="101dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    lh2:circleWidth="6dp"
                    lh2:firstColor="#dee0e4"
                    lh2:secondColor="#7bd37c" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="23dp"
                    android:layout_marginTop="15dp"
                    android:text="育成主任人数"
                    android:textColor="#394043"
                    android:textSize="@dimen/text_size_15sp" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#f8f8fa" />

        <TextView
            android:id="@+id/tv_fenxiang"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/selector_btn_register"
            android:gravity="center"
            android:text="分享推广"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_17sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:background="#9399a5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="活动规则"
                android:textColor="#394043"
                android:textSize="@dimen/text_size_15sp" />

            <View
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:background="#9399a5" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="38dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="23dp"
            android:visibility="gone"
            android:lineSpacingExtra="5dp"
            android:text="规则自定义，因可能存在系统缓存、页面更新导致价格变动异常等不确定性情况出现，如您发现活动商品标价或促销信息有异常，请您立即联系我们，以便我们及时补正"
            android:textColor="#9399a5"
            android:textSize="@dimen/text_size_15sp" />

        <WebView
            android:id="@+id/wv_rule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="WebViewLayout"></WebView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
